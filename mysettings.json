{
    "window.zoomLevel": 0.5,
    "editor.fontSize": 18,
    "editor.fontFamily": "JetBrains Mono,fira code",
    "editor.fontLigatures": true,
    "editor.mouseWheelZoom": true,
    "editor.linkedEditing": true,
    "javascript.suggest.completeFunctionCalls": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "editor.minimap.renderCharacters": false,
    "editor.minimap.showSlider": "always",
    "workbench.iconTheme": "material-icon-theme",
    "explorer.confirmDelete": false,
    "code-runner.runInTerminal": true,
    "code-runner.saveFileBeforesRun": true,
    "workbench.colorCustomizations": {
        "[Monokai]": {
            "titleBar.activeBackground": "#262626",
            "editor.background": "#202020",
            "editorLineNumber.activeForeground": "#7dff1a",
            "editor.lineHighlightBackground": "#353535",
            "activityBar.background": "#171717",
            "activityBar.activeBackground": "#1f8ce6",
            "activityBar.activeBorder": "#ffffff",
            "sideBar.background": "#181818",
            "sideBar.border": "#ffffff77",
            "tab.activeBackground": "#171717",
            "tab.activeBorderTop": "#171717",
            "tab.activeBorder": "#fff200",
            "menu.background": "#212121ea",
            "menu.selectionBackground": "#1f8ce6",
            "menu.selectionForeground": "#ffffff",
            "menu.border": "#ffffff77",
            "menu.separatorBackground": "#ffffff7b",
            "menubar.selectionBackground": "#1f8ce6",
            "menubar.selectionForeground": "#ffffff",
            "scrollbarSlider.activeBackground": "#1f8ce68f",
            "statusBar.background": "#171717"
        },
    },
    "liveServer.settings.CustomBrowser": "chrome:PrivateMode",
    "git.autofetch": true,
    "workbench.startupEditor": "none",
    "window.title": "${dirty} ${activeEditorShort} @ ${rootName} ${separator}${profileName}",
    "redhat.telemetry.enabled": true,
    "terminal.integrated.tabs.enabled": true,
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "liveServer.settings.donotVerifyTags": true,
    "terminal.integrated.confirmOnKill": "never",
    "terminal.explorerKind": "external",
    "code-runner.executorMap": {
        "javascript": "nodemon"
    },
    "python.defaultInterpreterPath": "C:\\Program Files\\Python311\\python.exe",
    "files.autoSave": "afterDelay",
    "breadcrumbs.enabled": false,
    "[python]": { // Here
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "black-formatter.showNotifications": "always",
    "python.analysis.completeFunctionParens": true,
    // "code-runner.saveFileBeforeRun": true,
    "code-runner.saveAllFilesBeforeRun": true,
    "workbench.colorTheme": "Monokai",
    "mdb.showMongoDBConnectionExplorer": true,
    // c++ settings
    "C_Cpp.intelliSenseUpdateDelay": 500,
    "C_Cpp.autocompleteAddParentheses": true,
    "C_Cpp.default.compilerPath": "C:/msys64/mingw64/bin",
    "C_Cpp.default.includePath": [
        "C:/msys64/mingw64/include",
    ],
    "liveServer.settings.donotShowInfoMsg": true,
    "git.enableSmartCommit": true,
    "editor.unicodeHighlight.allowedCharacters": {
        "❮": true,
        "❯": true
    },
    
    // "autoDocstring.startOnNewLine": true,
    // "autoDocstring.includeName": true,
    // "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
